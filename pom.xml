        <module>cy-framework-service-dao</module>
        <module>cy-framework-service-impl</module>
        <module>cy-framework-service-web</module>
        <module>cy-framework-pay</module>
        <module>cy-framework-apidoc</module>
        <module>cy-framework-authorization</module>
    </modules>
    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-configuration-processor</artifactId>
